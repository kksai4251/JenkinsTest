{
	"info": {
		"_postman_id": "93a4ad20-3b26-4591-ae6d-067d27725763",
		"name": "Jenkins Job - Adobe Usage Copy",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "33710932"
	},
	"item": [
		{
			"name": "Adobe Token Generation",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Save token\", function() {",
							"    var jsonData = pm.response.json();",
							"    pm.collectionVariables.set(\"authenticationtoken\", jsonData.access_token);",
							"",
							"    // ServerCallUsage - Overall logic",
							"    pm.sendRequest({",
							"        url: 'https://appservice5.omniture.com/analytics/1.0/servercallusage/servercalls',",
							"        method: 'GET',",
							"        header: {",
							"            'Accept': 'application/json',",
							"            'Authorization': 'Bearer ' + jsonData.access_token,",
							"            'x-proxy-global-company-id': 'ancest1'",
							"        }",
							"    }, function (err, res) {",
							"        if (err) {",
							"            console.log('Error: ' + err);",
							"        } else {",
							"            pm.test(\"ServerCallUsage - Overall response\", function() {",
							"                var responseJson = res.json();",
							"                const threshold = pm.environment.get(\"threshold\");",
							"                function formatDate(dateString) {",
							"                    const date = new Date(dateString);",
							"                    const options = { day: '2-digit', month: 'long', year: 'numeric' };",
							"                    return date.toLocaleDateString('en-US', options);",
							"                }",
							"                function formatNumber(num) {",
							"                    if (num >= 1_000_000_000) {",
							"                        return `${(num / 1_000_000_000)} B`;",
							"                    } else if (num >= 1_000_000) {",
							"                        return `${(num / 1_000_000)} M`;",
							"                    } else if (num >= 1_000) {",
							"                        return `${(num / 1_000)} K`;",
							"                    } else {",
							"                        return num.toString();",
							"                    }",
							"                }",
							"                const overallPrimaryCallsMetric = responseJson.metrics.find(metric => metric.metricId === 'overallprimarycalls');",
							"                const commitment = overallPrimaryCallsMetric.commitment;",
							"                const data = overallPrimaryCallsMetric.usage.find(usage => usage.id === 'currentperiodusage').data;",
							"                const lastDataEntry = data[data.length - 1];",
							"                const lastDate = lastDataEntry.date;",
							"                const lastUsage = lastDataEntry.usage;",
							"                const usagePercentage = (lastUsage / commitment) * 100;",
							"",
							"                if (usagePercentage > threshold) {",
							"                    console.log(`Usage percentage exceeds the threshold: ${usagePercentage}%`);",
							"                    // Send an alert to Slack",
							"",
							"                    const webhookUrl = pm.environment.get(\"slack_webhook_url\");",
							"",
							"                    const message = {",
							"                        channel: \"#bt-alerts\",",
							"                        attachments: [",
							"                            {",
							"                                mrkdwn_in: [\"text\"],",
							"                                color: \"#ff0000\",",
							"                                pretext: \":warning: Adobe Server Call Usage Alert\",",
							"                                text: \"The server call usage has exceeded the set threshold. Please investigate and take necessary actions.\",",
							"                                fields: [",
							"                                    {",
							"                                        title: \"Commitment\",",
							"                                        value: formatNumber(commitment),",
							"                                        short: true",
							"                                    },",
							"                                    {",
							"                                        title: \"Date\",",
							"                                        value: formatDate(lastDate),",
							"                                        short: true",
							"                                    },",
							"                                    {",
							"                                        title: \"Usage\",",
							"                                        value: lastUsage.toLocaleString('en-US'),",
							"                                        short: true",
							"                                    },",
							"                                    {",
							"                                        title: \"Usage Percentage\",",
							"                                        value: `${usagePercentage.toFixed(2)}%`,",
							"                                        short: true",
							"                                    },",
							"                                    {",
							"                                        title: \"Threshold\",",
							"                                        value: `${threshold}%`,",
							"                                        short: true",
							"                                    }",
							"                                ],",
							"                                footer: \"Server Call Monitoring\",",
							"                                footer_icon: \"https://platform.slack-edge.com/img/default_application_icon.png\",",
							"                                ts: Math.floor(Date.now() / 1000)",
							"                            }",
							"                        ]",
							"                    };",
							"",
							"                    console.log(`Sending request to Slack webhook: ${webhookUrl}`);",
							"                    pm.sendRequest({",
							"                        url: webhookUrl,",
							"                        method: 'POST',",
							"                        header: {",
							"                            'Content-Type': 'application/json'",
							"                        },",
							"                        body: {",
							"                            mode: 'raw',",
							"                            raw: JSON.stringify(message)",
							"                        }",
							"                    }, function (err, res) {",
							"                        if (err) {",
							"                            console.log(`Error: ${err}`);",
							"                        } else {",
							"                            console.log(`Response status: ${res.status}`);",
							"                            console.log(`Response body: ${res.text()}`);",
							"                        }",
							"                    });",
							"                } else {",
							"                    console.log(`Usage percentage is within acceptable limits: ${usagePercentage}%`);",
							"                }",
							"            });",
							"        }",
							"    });",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "{{client_id}}",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "{{client_secret}}",
							"type": "text"
						},
						{
							"key": "scope",
							"value": "openid,AdobeID,additional_info.projectedProductContext",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "https://ims-na1.adobelogin.com/ims/token/v3",
					"protocol": "https",
					"host": [
						"ims-na1",
						"adobelogin",
						"com"
					],
					"path": [
						"ims",
						"token",
						"v3"
					]
				}
			},
			"response": []
		}
